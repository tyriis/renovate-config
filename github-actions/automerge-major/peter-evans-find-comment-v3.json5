{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  description: "automerge peter-evans/find-comment from v2 to v3",
  packageRules: [
    {
      matchManagers: ["github-actions"],
      matchPackageNames: ["peter-evans/find-comment"],
      automerge: true,
      matchUpdateTypes: ["major"],
      automergeType: "pr",
      matchCurrentVersion: "/^v2/",
      allowedVersions: "<=3.0",
    },
  ],
}
