{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  description: "automerge peter-evans/create-or-update-comment from v3 to v4",
  packageRules: [
    {
      matchManagers: ["github-actions"],
      matchDepNames: ["peter-evans/create-or-update-comment"],
      automerge: true,
      matchUpdateTypes: ["major"],
      automergeType: "pr",
      matchCurrentVersion: "/^v3/",
      allowedVersions: "<=4.0",
    },
  ],
}
