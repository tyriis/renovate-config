{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  description: "automerge actions/dependency-review-action from v3 to v4",
  packageRules: [
    {
      matchManagers: ["github-actions"],
      matchDepNames: ["action/dependency-review-action"],
      automerge: true,
      matchUpdateTypes: ["major"],
      automergeType: "pr",
      matchCurrentVersion: "/^v3/",
      allowedVersions: "<=4.0",
    },
  ],
}
